<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:fbutton="http://schemas.android.com/apk/res-auto"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="proj.sadna.mta.sadna_2017.app.Fragments.NewTripFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.7"
        android:background="@drawable/nyw">

    </RelativeLayout>

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_set_data"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:alpha="0.65"
            android:background="@color/black"/>

        <RelativeLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentTop="true">

            <TextView
                android:id="@+id/headertxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Plan a day in New York"
                android:textColor="@color/white"
                android:textSize="22sp"/>
        </RelativeLayout>


        <TextView
            android:id="@+id/txt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/header"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:text="Help us plan the perfect route for you"
            android:textColor="@color/white"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:text="Please select your tour characteristics"
            android:textColor="@color/white"
            android:textSize="16sp"/>

        <RelativeLayout
            android:id="@+id/preferences"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/txt">

            <RelativeLayout
                android:id="@+id/session_c"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_alignParentTop="true"
                android:layout_margin="15dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/ic_circle"/>

                <ImageView
                    android:id="@+id/weather_ic"
                    android:layout_width="27dp"
                    android:layout_height="27dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/sun"/>

                <TextView
                    android:id="@+id/session"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/weather_ic"
                    android:text="Session:"
                    android:textColor="@color/white"
                    android:textSize="17sp"/>

                <Spinner
                    android:id="@+id/spinner1"
                    android:layout_width="130dp"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="22dp"
                    android:layout_toRightOf="@id/session"
                    android:background="@drawable/spinnerbg"
                    android:spinnerMode="dialog"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/type_c"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_below="@id/session_c"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="25dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/ic_circle"/>

                <ImageView
                    android:id="@+id/composition_ic"
                    android:layout_width="27dp"
                    android:layout_height="27dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/couple"/>

                <TextView
                    android:id="@+id/type"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/composition_ic"
                    android:text="Composition:"
                    android:textColor="@color/white"
                    android:textSize="17sp"/>

                <Spinner
                    android:id="@+id/spinner2"
                    android:layout_width="130dp"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/type"
                    android:background="@drawable/spinnerbg"
                    android:spinnerMode="dialog"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/hours_c"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_below="@id/type_c"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="25dp"
                android:layout_marginTop="15dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/ic_circle"/>

                <ImageView
                    android:id="@+id/clock_ic"
                    android:layout_width="27dp"
                    android:layout_height="27dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/clocl"/>

                <TextView
                    android:id="@+id/from"
                    android:layout_width="55dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="6dp"
                    android:layout_toRightOf="@id/clock_ic"
                    android:text="From:"
                    android:textColor="@color/white"
                    android:textSize="17sp"/>

                <Spinner
                    android:id="@+id/spinner3"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/from"
                    android:background="@drawable/spinnerbg"
                    android:spinnerMode="dropdown"/>


                <Spinner
                    android:id="@+id/spinner4"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/spinnerbg"
                    android:spinnerMode="dropdown"/>

                <TextView
                    android:id="@+id/to"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_toLeftOf="@id/spinner4"
                    android:text="To:  "
                    android:textColor="@color/white"
                    android:textSize="18sp"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/hours_c">

                <info.hoang8f.widget.FButton
                    android:id="@+id/guideMe"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:layout_centerInParent="true"
                    android:layout_margin="25dp"
                    android:shadowColor="@color/fbutton_default_shadow_color"
                    android:text="Find my trip!"
                    android:textColor="@color/white"
                    android:textSize="17sp"
                    fbutton:buttonColor="@color/fbutton_default_color"
                    fbutton:shadowEnabled="true"
                    fbutton:shadowHeight="2dp"/>

            </RelativeLayout>
        </RelativeLayout>


    </RelativeLayout>

</FrameLayout>
