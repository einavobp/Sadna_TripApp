<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:background="@color/grey3">

    <RelativeLayout
        android:id="@+id/clickable"
        android:layout_width="wrap_content"
        android:layout_height="97dp"
        android:layout_centerInParent="true"
        android:background="@color/white">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_alignParentBottom="true"
            android:alpha="0.9"
            android:background="@color/greyish"/>

        <ImageView
            android:id="@+id/site_img"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:scaleType="centerCrop"
            android:src="@drawable/pictures"/>

        <RelativeLayout
            android:id="@+id/data_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/site_img">

            <TextView
                android:id="@+id/site_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="10dp"
                android:text="Site Name"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/site_short_desc"
                android:layout_width="185dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/site_name"
                android:layout_marginTop="5dp"
                android:text="This is a Short description"
                android:textColor="@color/grey"
                android:textSize="14dp"/>

            <TextView
                android:id="@+id/site_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/site_short_desc"
                android:layout_marginTop="17dp"
                android:text="museums, kids, indoor"
                android:textColor="@color/grey2"
                android:textSize="10sp"/>


        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>