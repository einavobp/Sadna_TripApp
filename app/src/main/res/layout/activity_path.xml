<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_path"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/header_toolbar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:background="@color/light_blue">

        <ImageView
            android:id="@+id/map"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/map"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="My Path"
            android:textColor="@color/white"
            android:textSize="20sp"/>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/back"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/save_start_btn"
        android:layout_width="250dp"
        android:layout_height="35dp"
        android:layout_below="@id/header_toolbar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/filter_btn">

        <RelativeLayout
            android:id="@+id/wall"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:background="@color/greyish"/>

        <RelativeLayout
            android:id="@+id/save_btn"
            android:layout_width="95dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true">

            <ImageView
                android:id="@+id/save_ic"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:src="@drawable/savefull"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/save_ic"
                android:text="Save"
                android:textColor="@color/black"
                android:textSize="18sp"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/startover_btn"
            android:layout_width="95dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@id/wall">

            <ImageView
                android:id="@+id/refresh_ic"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="6dp"
                android:src="@drawable/refresh"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/refresh_ic"
                android:text="Start Over"
                android:textColor="@color/black"
                android:textSize="18sp"/>
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/icons"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_alignParentTop="true"
            android:visibility="gone">

            <RelativeLayout
                android:id="@+id/help"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="6dp">

                <ImageView
                    android:id="@+id/img_h"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_help"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/img_h"
                    android:layout_centerHorizontal="true"
                    android:text="Info"
                    android:textColor="@color/grey"
                    android:textSize="14sp"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/shirt"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/help">

                <ImageView
                    android:id="@+id/img_sh"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_shirt"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/img_sh"
                    android:layout_centerHorizontal="true"
                    android:text="Shop"
                    android:textColor="@color/grey"
                    android:textSize="14sp"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/burger"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/shirt">

                <ImageView
                    android:id="@+id/img_b"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_burger"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/img_b"
                    android:layout_centerHorizontal="true"
                    android:text="Food"
                    android:textColor="@color/grey"
                    android:textSize="14sp"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/glass"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/burger">

                <ImageView
                    android:id="@+id/img_g"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_glass"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/img_g"
                    android:layout_centerHorizontal="true"
                    android:text="Drinks"
                    android:textColor="@color/grey"
                    android:textSize="14sp"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/tower"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/glass">

                <ImageView
                    android:id="@+id/img_ip"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_ip"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/img_ip"
                    android:layout_centerHorizontal="true"
                    android:text="Points"
                    android:textColor="@color/grey"
                    android:textSize="14sp"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/museum"
                android:layout_width="65dp"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="6dp"
                android:layout_toRightOf="@id/tower">

                <ImageView
                    android:id="@+id/img_m"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/ic_museum"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/img_m"
                    android:layout_centerHorizontal="true"
                    android:text="Museums"
                    android:textColor="@color/grey"
                    android:textSize="14sp"/>
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>

    <com.baoyz.swipemenulistview.SwipeMenuListView
        android:id="@+id/my_path"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/save_start_btn"
        android:layout_marginTop="15dp"/>

    <info.hoang8f.widget.FButton
        android:id="@+id/add_site"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="25dp"
        android:text="Add site"
        android:textColor="@color/white"
        android:visibility="invisible"
        fbutton:buttonColor="@color/fbutton_default_shadow_color"
        fbutton:shadowColor="@color/fbutton_default_shadow_color"/>
</RelativeLayout>
