<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/o1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_margin="15dp"
            android:text="Opening Hours:"
            android:textColor="@color/black"
            android:textSize="23sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/o2"
            android:layout_below="@id/o1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="Monday:                 09:00-21:00"
            android:textColor="@color/black"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/o3"
            android:layout_below="@id/o2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="Thu-Fri:                   09:00-21:00"
            android:textColor="@color/black"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/o4"
            android:layout_below="@id/o3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="Saturday:                09:00-21:00"
            android:textColor="@color/black"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/o5"
            android:layout_below="@id/o4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="Sunday:                   09:00-21:00"
            android:textColor="@color/black"
            android:textSize="20sp"/>
    </RelativeLayout>
</FrameLayout>
